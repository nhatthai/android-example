<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_black"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView2"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressLogin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_email_black"
        android:layout_marginTop="49dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/editTxtEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:hint="@string/lbl_email_hint"
        android:padding="4dp"
        android:textColorHint="@color/colorBlack"
        style="@style/TSFont.Light"
        android:textAlignment="center"
        android:layout_above="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_black"
        android:layout_gravity="center"
        android:id="@+id/imageView3"
        android:layout_above="@+id/editTxtPass"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTxtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        style="@style/TSFont.Light"
        android:hint="@string/lbl_password_hint"
        android:textColorHint="@color/colorBlack"
        android:padding="4dp"
        android:textAlignment="center"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btn_login"
        android:textSize="20dp"
        android:textColor="@color/colorTextLogin"
        android:background="@color/colorWhite"
        android:layout_above="@+id/btnLoginFB"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btnLoginFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_btn_login_fb"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBtnFb"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/ic_fb_logo"
        android:drawablePadding="50dp"
        android:gravity="left|center_vertical"/>
</RelativeLayout>